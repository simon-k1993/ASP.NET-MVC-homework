@using BurgerAPP.Models.ViewModels;
@model List<BurgerViewModel>

<h2>There are @ViewData["NumberOfBurgers"] burgers on our menu.</h2>

<h4>@ViewData["Title"]</h4>

<a asp-controller="Burger" asp-action="AddBurger">Add Burger</a>



@for (int i = 0; i < Model.Count; i++)
{
    <h3>@Model.ElementAt(i).BurgerName</h3>
    <p>Price: @Model.ElementAt(i).Price</p>
    <p>Is Vegetarian: @Model.ElementAt(i).IsVegetarian</p>
    <p>Is Vegan: @Model.ElementAt(i).IsVegan</p>
    <p>Has Fries: @Model.ElementAt(i).HasFries</p>

    <a asp-controller="Burger" asp-action="EditBurger" asp-route-id="@Model[i].Id">Edit</a>
    <a asp-controller="Burger" asp-action="DeleteBurger" asp-route-id="@Model[i].Id">Delete</a>
}